@model ContactVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Links{
    <title>Lapland - Contact Us</title>
    <link rel="icon" href="~/assets/images/index/logo-icon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/assets/css/contact-us/contact-us.css">
}

<main>
    <section id="new-title">
        <div class="title-back">
            <h3>Contact Us</h3>
            <img src="./assets/images/books-firstpage/new title.png" alt="">
        </div>
    </section>

    <section id="contact-us">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="rectangle">
                        <div class="title">
                            <h1>Contact Us</h1>
                        </div>

                        <div class="form-contact">
                            <form asp-controller="Contact" asp-action="Index" method="post">
                                <label for="fname">First Name<i class="fa-solid fa-star-of-life"></i></label>
                                <input asp-for="Contact.Name" type="text" id="fname" name="firstname" placeholder="Your name...">

                                <label for="lname">Last Name<i class="fa-solid fa-star-of-life"></i></label>
                                <input asp-for="Contact.Surname" type="text" id="lname" name="lastname" placeholder="Your last name...">

                                <label for="number">Phone<i class="fa-solid fa-star-of-life"></i></label>
                                <input asp-for="Contact.PhoneNumber" type="text" id="number" name="phonenumber" placeholder="Phone Number...">

                                <label for="email">Email<i class="fa-solid fa-star-of-life"></i></label>
                                <input asp-for="Contact.PhoneNumber" type="text" id="email" name="email" placeholder="Email...">

                                <label for="subject">Message<i class="fa-solid fa-star-of-life"></i></label>
                                <input asp-for="Contact.Message" type="text" id="message" name="message" placeholder="Message...">


                                <button class="submit" role="button">Submit</button>
                            </form>
                        </div>

                    </div>

                    <div class="snow">
                        <img src="./assets/images/contact-us/snow.gif" alt="">
                    </div>

                </div>
            </div>
        </div>
    </section>

    <section id="back-snow">
    </section>


</main>

@section Scripts{
    <script src="https://kit.fontawesome.com/07a597ef8b.js" crossorigin="anonymous"></script>
    }

