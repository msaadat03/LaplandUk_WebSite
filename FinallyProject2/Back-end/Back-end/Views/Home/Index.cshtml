@model HomeVM
@{
    ViewData["Title"] = "Home Page";
}

@section Links{
    <title>Lapland - Home</title>
    <link rel="icon" href="~/assets/images/index/logo-icon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/assets/css/home/home.css">
}

<main>
    <section id="home-title">
        <div class="row">
            <div class="col-12">
                @foreach (var item in Model.Logos)
                {
                    <div class="title-hide"><img src="~/assets/images/home/@item.Image" alt=""></div>
                }

            </div>

            <div class="col-12">
                <div class="aurora-left">
                    <img src="~/assets/images/home/aurora-left.png" alt="">
                </div>
            </div>

            <div class="col-12">
                <div class="aurora-right">
                    <img src="~/assets/images/home/aurora-right.png" alt="">
                </div>
            </div>
        </div>
    </section>
    Aly
    <section id="world">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="upper-title">
                        <p class="upper-tittle-first">@Model.HomeWorlds.UpperTitle1</p><br>
                        <p class="upper-tittle-second">@Model.HomeWorlds.UpperTitle2</p>
                    </div>

                    <div class="title">
                        <h1>@Model.HomeWorlds.Title</h1>
                    </div>

                    <div class="content">
                        <p>@Model.HomeWorlds.Desc</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="back-tree-wlp">
        <div class="row">
            <div class="col-12">
                <div class="home-tree-walp">
                    <img style="position: absolute;" src="~/assets/images/home/backwalp-video.png" alt="">
                    <img src="~/assets/images/home/master.gif" alt="">
                </div>

            </div>
        </div>
    </section>

    <section id="invitation">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-12">
                    <div class="upper-title">
                        <p class="upper-tittle-first">@Model.HomeInvitations.UpperTitle</p><br>
                    </div>

                    <div class="title">
                        <p>@Model.HomeInvitations.Title1</p>
                        <p>@Model.HomeInvitations.Title2</p>
                    </div>
                </div>


                <div class="col-md-6 col-12">
                    <div class="content">
                        <p>@Model.HomeInvitations.Desc</p>
                    </div>
                </div>



            </div>

            <div class="aurora-right">
                <img src="~/assets/images/home/aurora-right.png" alt="">
            </div>

            <div class="col-12">
                <div class="personaj">
                    <img src="~/assets/images/home/Elva2x.png" alt="">
                </div>
            </div>

            <div class="aurora-left">
                <img src="~/assets/images/home/aurora-left.png" alt="">
            </div>
        </div>
        </div>

    </section>

    <section id="adventure">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-12">
                    <div class="upper-title">
                        <p class="upper-tittle-first">@Model.HomeAdventures.UpperTitle</p><br>
                    </div>

                    <div class="title">
                        <p>@Model.HomeAdventures.Title1</p>
                        <p>@Model.HomeAdventures.Title2</p>
                    </div>
                </div>


                <div class="col-md-6 col-12">
                    <div class="content">
                        <p>
                            @Model.HomeAdventures.Desc
                            <br>
                        </p>
                    </div>
                </div>



            </div>
        </div>

    </section>

    <section id="journey-slider">
        <div class="slider">
            @foreach (var slider in Model.JourneySliders)
            {
                <span style="--i:@slider.Id;"><img src="~/assets/images/home/@slider.Image" alt=""></span>

            }
        </div>
    </section>

    <section id="journey-slider-content">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="content">
                        <div class="text">
                            @foreach (var item in Model.SliderContents)
                            {
                                <h1>@item.Title</h1>
                                <p>@item.Desc</p>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

    <section id="christmas-slider">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="upper-title">
                        <p class="upper-tittle-first">@Model.HomeGalleries.UpperTitle</p><br>
                    </div>

                    <div class="title">
                        <h1>@Model.HomeGalleries.Title</h1>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-12">
            <div class='slide'>
                <div class='controlls'>
                    <button data-btn-prev>
                        <img src="~/assets/images/home/left-btn-big.svg" alt="">
                    </button>

                    <button data-btn-next>
                        <img src="~/assets/images/home/right-btn.btn.svg" alt="">
                    </button>
                </div>
                <div class='main'>

                    @foreach (var item in Model.SliderGalleries)
                    {
                        <div class='item'>
                            <img data-slide-img src='~/assets/images/home/@item.Image'>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <section id="end-photo">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="meet-title">
                        <div class="upper-title">
                            <div class="upper-title-fs">
                                <p class="upper-tittle-first">@Model.HomeMeets.UpperTitle1</p><br>
                                <p class="upper-tittle-second">@Model.HomeMeets.UpperTitle2</p><br>
                            </div>
                            <div class="title">
                                <h1>@Model.HomeMeets.Title</h1>
                            </div>

                        </div>


                    </div>
                </div>
            </div>
        </div>
        <div class="last-christmas">
            <img src="~/assets/images/home/@Model.HomeMeets.Images" alt="">
        </div>

    </section>


</main>

@section Scripts{
    <script src="https://kit.fontawesome.com/07a597ef8b.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.2/jquery.min.js"
        integrity="sha512-tWHlutFnuG0C6nQRlpvrEhE4QpkG1nn2MOUMWmUeRePl4e3Aki0VB6W1v3oLjFtd0hVOtRQ9PHpSfN6u6/QXkQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/assets/js/home/home.js"></script>
    }