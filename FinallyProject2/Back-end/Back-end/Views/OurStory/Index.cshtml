@model OurStoryVM
@{
	ViewData["Title"] = "Our Story";
}

@section Links{
					<title>LaplandUK - The Ancient Elven Civilisation</title>
			<link rel="icon" href="~/assets/images/index/logo-icon.png" type="image/x-icon">
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
			<link rel="stylesheet" href="~/assets/css/books-firstpage/books-firstpage.css">
}
	


					 <main>

						<section id="new-title">
							<div class="title-back">
								<h3 style=" text-align: center; width: 500px; position: absolute; font-size: 50px; color: white;">@Model.OurStoryTitles.Title</h3>
								<img src="~/assets/images/books-firstpage/@Model.OurStoryTitles.Images" alt="">
							</div>
						</section>

						<section id="red-book-about">
							<div class="container">
								<div class="row">
									<div class="col-6">
										<div class="content">
											@foreach (var item in Model.RedBooks)
										   {
											   <p>@item.Desc</p><br><br>
										   }
										</div>
									</div>

									<div class="col-lg-6 col-md-12 col-sm-12">
										<div class="redbook-img">
											<img src="~/assets/images/books-firstpage/@Model.RedBookimgs.Images" alt="">
										</div>
									</div>

								</div>
							</div>
						</section>

						<section id="images-redbook-page">
							<div class="container">
								<div class="row">
											@foreach (var item in Model.RedBookPages)
										   {
											<div class="col-lg-6 col-md-12 col-12">
											<div class="book-images">
										<img src="~/assets/images/books-firstpage/@item.Images" alt="">
											</div>
											</div>
										   }
								</div>
							</div>

						</section>

						<section id="redbook-app">
							<div class="container">
								<div class="row">
									<div class="col-12">
										<div class="story">
                                            <video controls="controls">
                                                <source src="./assets/video/founding_story.mov (720p).mp4" type="video/mp4" />
                                               
                                            </video>
										</div>
									</div>
								</div>
							</div>
						</section>

					</main>

	@section Scripts{
						<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    }
