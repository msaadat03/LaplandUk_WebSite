@model ForgetPasswordVM

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


@section Links2{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/assets/css/login/login.css" />
    <title>Login</title>
}

<main>
    <section id="shop-bg" style="background: #0f204b; height: 300px;">
        <h2>Login</h2>
    </section>

    <section id="login-form">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="login-register">
                        <div class="user login">
                            <div class="login-img">
                                <img style="width: 390px; height: 500px"
                                     src="~/assets/images/login/Lapland.jpg"
                                     alt="" />
                            </div>
                            <div class="login-form">
                                <form asp-controller="Account" asp-action="ForgetPassword" method="post" enctype="multipart/form-data">
                                    <h2>Please, write email</h2>
                                    <input asp-for="Email" placeholder="Email or Username" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <input type="submit" value="Send" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>

@section Scripts2{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js" crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/b39b112ecb.js" crossorigin="anonymous"></script>
    <script src="~/assets/js/login/login.js"></script>
}

