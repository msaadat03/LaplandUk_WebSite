
@{
    ViewData["Title"] = "VerifyEmail";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@section Links2{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/assets/css/register/register.css" />
    <title>Check Mail</title>
}
<main>
    <section id="shop-bg" style="background: #0f204b; height: 300px;">
        <h2>Register</h2>
    </section>
    <section id="register-form">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="login-register">
                        <div class="user login">
                            <div class="login-img">
                                <img style="width: 390px; height: 500px"
                                     src="~/assets/images/register/rovaniemi-the-official-hometown-of-santa-claus-in-finnish-lapland.jpg"
                                     alt="" />
                            </div>
                            <div class="login-form">
                                <form asp-controller="Account" asp-action="Register" method="post" enctype="multipart/form-data">
                                    <h2>REGISTER</h2>
                                    <input placeholder="Full Name" />
                                    <span class="text-danger"></span>

                                    <input placeholder="Username" />
                                    <span class="text-danger"></span>

                                    <input placeholder="Enter your Email" />
                                    <span class="text-danger"></span>


                                    <input placeholder="Enter your Password" />
                                    <span class="text-danger"></span>


                                    <input placeholder="Repeat your Password" />
                                    <span class="text-danger"></span>

                                    <p style="color: green; font-size: 15px">Please, check your email</p>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>

@section Scripts2{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js" crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/b39b112ecb.js" crossorigin="anonymous"></script>
    <script src="~/assets/js/register/register.js"></script>
}