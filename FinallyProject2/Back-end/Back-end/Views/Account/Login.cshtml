@model LoginVM

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


@section Links2{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      crossorigin="anonymous" />
    <link rel="stylesheet" href="~/assets/css/login/login.css" />
    <title>Login</title>
}

<main>
    <section id="shop-bg" style="background: #0f204b; height: 300px;">
        <h2>Login</h2>
    </section>

    <section id="login-form">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="login-register">
                        <div class="user login">
                            <div class="login-img">
                                <img style="width: 390px; height: 500px"
                                     src="~/assets/images/login/Lapland.jpg"
                                     alt="" />
                            </div>

                            <div class="login-form">
                                
                                <form asp-controller="Account" asp-action="Login" method="post" enctype="multipart/form-data">
                                    <div class="text-danger" asp-validation-summary="All"></div>

                                    <h2>Login</h2>
                                    <input asp-for="EmailOrUsername" placeholder="Username or Email" />
                                    <span asp-validation-for="EmailOrUsername" class="text-danger"></span>

                                    <input asp-for="Password" placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>

                                    <input type="submit" value="Login" />
                                    <p class="forgot password">
                                        <a asp-controller="Account" asp-action="ForgetPassword" style="text-decoration: none; font-size: 12px; font-weight: 15px;">FORGET PASSWORD</a>
                                    </p>
                                    <p class="register">
                                        Don't have an account?
                                        <a asp-controller="Register" asp-action="Index">Register</a>
                                    </p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>

