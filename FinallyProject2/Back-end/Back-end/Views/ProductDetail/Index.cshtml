@model ShopVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@section Links2{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/assets/css/product-detail/product-detail.css" />
    <title>Product Details</title>
}

<main>
    <section id="shop-bg" style="background: #0f204b; height: 300px;">
        <h2>Login</h2>
    </section>

    <section id="product-detail" product-id="@Model.Product.Id">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-md-12 col-sm-12">
                    <div id="div1">
                        <div id="div3">
                            <div>
                                <img src="~/assets/images/shop/products/@Model.Product.ProductImages.Where(m => m.IsMain).FirstOrDefault()?.Name" />
                            </div>
                        </div>
                        <div id="div2">
                            <img id="foto"
                                 src="~/assets/images/shop/products/@Model.Product.ProductImages.Where(m => !m.IsMain).FirstOrDefault()?.Name" />
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12 col-sm-12 detail">
                    <h6>@Model.SubCategory.Name</h6>
                    <h1 class="">@Model.Product.Name</h1>
                    <h2>$@Model.Product.Price.ToString("N2")</h2>
                    <h6>By Lapland</h6>
                    <h5>Quantity</h5>
                    <input type="number" value="1" /> <br> <br>
                    <button class="add-btn">Add To Cart</button>
                    <h4 class="mt-3">Product Details</h4>
                    <span>@Model.Product.Description</span>

                </div>
            </div>
        </div>
    </section>

</main>

@section Scripts2{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/fslightbox/3.3.1/index.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"
            crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"
            crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/b39b112ecb.js"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
    <script src="~/assets/js/product-detail/product-detail.js"></script>
}

