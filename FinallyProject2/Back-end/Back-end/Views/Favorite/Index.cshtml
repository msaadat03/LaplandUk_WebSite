@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@section Links2{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      crossorigin="anonymous" />
    <link rel="stylesheet" href="~/assets/css/favorite-product/favorite-product.css" />
    <title>Favorite Products</title>
}

<style>
    #favorite-table .delete-icon {
        cursor: pointer;
        color: white;
        padding: 20px;
        background: red;
        border-radius: 5px;
    }
</style>

<main>
    <section id="shop-bg" style="background: #0f204b; height: 300px;">

        <h2>Favorite Product</h2>

    </section>

    <section id="favorite-table">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-12 d-flex align-items-center h-100">
                    <div class="card border-0 w-100">
                        <div class="card-body">
                            <table id="productTable"
                                   class="table table-bordered align-middle">
                                <thead class="table-color">
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Setting</th>
                                    </tr>
                                </thead>
                                <tbody class="table-body">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts2{
    <script>
        $(".btn").on("click", function () {
            $(".input").toggleClass("inclicked");
            $(".btn").toggleClass("close");
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.4.30/sweetalert2.all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js" crossorigin="anonymous"
        referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/b39b112ecb.js" crossorigin="anonymous"></script>
    <script src="~/assets/js/favorite-product/favorite-product.js"></script>
    }


