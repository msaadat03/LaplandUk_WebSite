@model Paginate<ProductListVM>

@{
    int count = 0;
}

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Products</h4>
                <div class="table-responsive pt-3">
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <a asp-action="Create" style="color: white;" type="button" class="btn btn-success"><i class="mdi mdi-folder-plus"></i></a>

                    }
                    <table class="table table-bordered my-3">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Datas)
                            {
                                count++;

                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img style="border-radius: 5px; width: 150px; height: 200px;" src="~/assets/images/shop/products/@product.MainImage" alt="product">
                                    </td>
                                    <td style="font-size: 18px;">
                                        @Html.Raw(product.Name)
                                    </td>
                                    <td style="font-size: 18px;">
                                        @Html.Raw(product.Description)
                                    </td>
                                    <td>
                                        @Html.Raw(product.Price.ToString("N2"))$
                                    </td>
                                    <td style="display: flex; gap: 10px; padding-top: 100px; justify-content: center">
                                        <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-info"><i class="mdi mdi-information"></i></a>
                                        @if (User.IsInRole("SuperAdmin"))
                                        {
                                            <a asp-action="Update" asp-route-id="@product.Id" style="color: white;" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                                            <form asp-action="Delete" asp-route-id="@product.Id">
                                                <button style="color: white;" type="submit" class="btn btn-danger"><i class="mdi mdi-delete"></i></button>
                                            </form>
                                        }

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination d-flex justify-content-center">
            <li class="page-item @(Model.Previous == false ? "disabled" : "")">
                <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" class="page-link" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPage; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "disabled" : "")"><a asp-action="Index" asp-route-page="@i" class="page-link">@i</a></li>
            }
            <li class="page-item @(Model.Next == true ? "" : "disabled")">
                <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
