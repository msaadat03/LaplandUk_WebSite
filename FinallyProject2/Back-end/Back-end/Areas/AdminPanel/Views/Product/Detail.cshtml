@model ProductDetailVM

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product detail</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered my-3">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Category
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <img style="border-radius: 5px; width: 150px; height: 200px;" src="~/assets/images/shop/products/@Model.Images.Where(m => m.IsMain).FirstOrDefault()?.Name" alt="product">
                                </td>
                                <td style="font-size: 25px;">
                                    @Html.Raw(Model.Name)
                                </td>
                                <td style="font-size: 18px;">
                                    @Html.Raw(Model.Description)
                                </td>
                                <td>
                                    @Html.Raw(Model.Price.ToString("N2"))$
                                </td>
                                <td style="font-size: 18px;">
                                    @Html.Raw(Model.Category)
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-bordered my-3">
                        <thead>
                            <tr>
                                <th>
                                    Images
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @foreach (var image in Model.Images)
                                    {
                                        <img style="border-radius: 5px; width: 150px; height: 200px;" src="~/assets/images/shop/products/@image.Name" alt="product">
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
